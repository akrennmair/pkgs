# Description: stfl
# URL: http://www.clifford.at/stfl/
# Maintainer: ak

name=stfl
version=0.21
release=1
source=(http://www.clifford.at/stfl/$name-$version.tar.gz)

build() {
	cd $name-$version
	patch -p1 < $PKGMK_PACKAGE_DIR/patches/00_ncursesw.patch
	make prefix=/usr/pkg
	make DESTDIR=$PKG prefix=/usr/pkg install
}
